<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MapMaker</title>
    <link href="https://fonts.googleapis.com/css?family=Inconsolata" rel="stylesheet">
    <link href="@Url.Content("~/Styles/main.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="font-family: 'Inconsolata', Courier, monospace; background-color: #232323; color: #72bb53;">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #424242; color: #aaaaaa;">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("MapMaker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="container" id="nav-container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("New Map", "Create", "Map")</li>
                        <li>@Html.ActionLink("View Maps", "Index", "Map")</li>
                        <li>@Html.ActionLink("My Maps", "MyMaps", "Map")</li>
                        <li>@Html.ActionLink("Events", "Index", "GameEvent")</li>
                        <li>@Html.ActionLink("Explore", "Index", "Explore")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr style="border-color:#72bb53;" />
        <footer style="font-family: 'Inconsolata', Courier, monospace; background-color: #232323; color: #72bb53;">
            <p>&copy; @DateTime.Now.Year - Code Goblins - Logan Baker</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/map.preview.js"></script>
    <script src="~/Scripts/map.explore.js"></script>
</body>
</html>